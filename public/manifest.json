{
  "name": "Medium Any Author Stats",
  "description": "The statistics of any Medium author.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://*.medium.com/*"],
      "js": ["mediumQuery.js", "contentScript.js"]
    }
  ],
  "action": {
      "default_popup": "index.html",
      "default_title": "Open Medium Any Authors Stats"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
  },
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  }
}